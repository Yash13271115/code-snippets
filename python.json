    "Django Clean Field Validation": {
        "prefix": "djCleanFieldMethod",
        "body": [
            "def clean_${1:field}(self):",
            "    value = self.cleaned_data.get('${1:field}')",
            "    if not value:",
            "        raise forms.ValidationError('${2:This field is required}')",
            "    return value"
        ],
        "description": "Add a field-level clean_<field>() validation method to a form"
    },
    "Django Clean Form Validation": {
        "prefix": "djCleanFormMethod",
        "body": [
            "def clean(self):",
            "    cleaned_data = super().clean()",
            "    ${1:field1} = cleaned_data.get('${1:field1}')",
            "    ${2:field2} = cleaned_data.get('${2:field2}')",
            "",
            "    if ${1:field1} == ${2:field2}:",
            "        raise forms.ValidationError('${3:Fields cannot match}')",
            "    return cleaned_data"
        ],
        "description": "Add a form-level clean() method for cross-field validation"
    },
