    "Django Form Field with Widget": {
        "prefix": "djFormFieldWidget",
        "body": [
            "from django import forms",
            "",
            "class ${1:MyForm}(forms.Form):",
            "    ${2:email} = forms.EmailField(",
            "        widget=forms.EmailInput(attrs={'class': 'form-control', 'placeholder': '${3:Enter email}'}),",
            "    )"
        ],
        "description": "Create a Django Form with a styled widget (e.g., EmailInput)"
    },
    "Django ModelForm with Custom Widgets": {
        "prefix": "djModelFormWidget",
        "body": [
            "from django import forms",
            "from ${1:app}.models import ${2:ModelName}",
            "",
            "class ${2:ModelName}Form(forms.ModelForm):",
            "    class Meta:",
            "        model = ${2:ModelName}",
