    "Django ModelForm Template": {
        "prefix": "django-modelform-template",
        "body": [
            "from django import forms",
            "from ${1:app}.models import ${2:ModelName}",
            "",
            "class ${2:ModelName}Form(forms.ModelForm):",
            "    class Meta:",
            "        model = ${2:ModelName}",
            "        fields = ['${3:field1}', '${4:field2}']"
        ],
        "description": "Create a basic Django ModelForm linked to a model"
    },
    "Django Form Field With Widget": {
        "prefix": "django-form-field-with-widget",
        "body": [
            "from django import forms",
            "",
            "class ${1:MyForm}(forms.Form):",
            "    ${2:email} = forms.EmailField(",
            "        widget=forms.EmailInput(attrs={'class': 'form-control', 'placeholder': '${3:Enter email}'}),",
            "    )"
        ],
        "description": "Create a Django Form with a styled widget such as EmailInput"
    },
    "Django ModelForm With Custom Widgets": {
        "prefix": "django-modelform-with-custom-widgets",
        "body": [
            "from django import forms",
            "from ${1:app}.models import ${2:ModelName}",
            "",
            "class ${2:ModelName}Form(forms.ModelForm):",
            "    class Meta:",
            "        model = ${2:ModelName}",
            "        fields = ['${3:field1}', '${4:field2}']",
            "        widgets = {",
            "            '${3:field1}': forms.TextInput(attrs={'class': 'form-control'}),",
            "            '${4:field2}': forms.TextInput(attrs={'class': 'form-control'}),",
            "        }"
        ],
        "description": "Django ModelForm setup with styled widgets"
    },
    "Django Clean Field Validation": {
        "prefix": "django-clean-field-validation",
        "body": [
            "def clean_${1:field}(self):",
            "    value = self.cleaned_data.get('${1:field}')",
            "    if not value:",
            "        raise forms.ValidationError('${2:This field is required}')",
            "    return value"
        ],
        "description": "Add a field-level clean_<field> validation method"
    },
    "Django Clean Form Validation": {
        "prefix": "django-clean-form-validation",
        "body": [
            "def clean(self):",
            "    cleaned_data = super().clean()",
            "    ${1:field1} = cleaned_data.get('${1:field1}')",
            "    ${2:field2} = cleaned_data.get('${2:field2}')",
            "",
            "    if ${1:field1} == ${2:field2}:",
            "        raise forms.ValidationError('${3:Fields cannot match}')",
            "    return cleaned_data"
        ],
        "description": "Form-level clean() for cross-field validation"
    },
