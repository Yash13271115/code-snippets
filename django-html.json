{
    "Django Template Extends": {
        "prefix": "django-template-extends",
        "body": [
            "{% extends '${1:base}.html' %}",
            "",
            "{% block ${2:content} %}",
            "    ${3:<!-- Your content here -->}",
            "{% endblock %}"
        ],
        "description": "Django template that extends a base template"
    },
    "Django Template Include": {
        "prefix": "django-template-include",
        "body": [
            "{% include '${1:partials/header}.html' %}"
        ],
        "description": "Django template include directive"
    },
    "Django For Loop": {
        "prefix": "django-for",
        "body": [
            "{% for ${1:item} in ${2:list} %}",
            "    ${3:<!-- loop content -->}",
            "{% endfor %}"
        ],
        "description": "Django template for loop block"
    },
    "Django If Condition": {
        "prefix": "django-if",
        "body": [
            "{% if ${1:condition} %}",
            "    ${2:<!-- content -->}",
            "{% endif %}"
        ],
        "description": "Django template if condition block"
    },
    "Django URL Tag": {
        "prefix": "django-url",
        "body": [
            "{% url '${1:route_name}' ${2:args} %}"
        ],
        "description": "Django URL tag to generate route URLs"
    },
    "Django Anchor URL": {
        "prefix": "django-href-url",
        "body": [
            "<a href=\"{% url '${1:route_name}' ${2:args} %}\">${3:Link Text}</a>"
        ],
        "description": "HTML anchor linking using Django URL tag"
    },
    "Django Basic Form": {
        "prefix": "django-form",
        "body": [
            "from django import forms",
            "",
            "class ${1:MyForm}(forms.Form):",
            "    ${2:field} = forms.${3:CharField}(max_length=255)"
        ],
        "description": "Basic Django form class"
    },
    "Django Form Template": {
        "prefix": "django-form-template",
        "body": [
            "<form method=\"post\">",
            "    {% csrf_token %}",
            "    {{ ${1:form}.as_p }}",
            "    <input type=\"submit\" value=\"Submit\">",
            "</form>"
        ],
        "description": "Django template snippet for rendering a form with CSRF"
    }
}