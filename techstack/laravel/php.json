{
    "File": "php.json",

    "Laravel Middleware Append": {
        "prefix": "laravel-middleware-append",
        "body": [
            "\\$middleware->web(append: [",
            "    ${1:YourMiddleware}::class,",
            "]);"
        ],
        "description": "Append custom middleware to the web group in bootstrap/app.php"
    },

    "Laravel Middleware Append Inertia": {
        "prefix": "laravel-middleware-append-inertia",
        "body": [
            "// use App\\Http\\Middleware\\HandleInertiaRequests;",
            "\\$middleware->web(append: [",
            "    HandleInertiaRequests::class,",
            "]);"
        ],
        "description": "Append Inertia middleware to the web group in bootstrap/app.php"
    },

    "Laravel Route Include Folder": {
        "prefix": "laravel-route-include-folder",
        "body": [
            "include_once(base_path().'/routes/${1:Admin}/routes.php');"
        ],
        "description": "Include a route file from another folder"
    }
}
